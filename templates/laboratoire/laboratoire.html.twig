{% extends 'base.html.twig' %}

{% block body %}
<style>
.laboratoire-bg {
    min-height: 100vh;
    width: 100vw;
    background: url('/images/Laboratoire1.png') center center no-repeat;
    background-size: cover;
    position: relative;
}

/* Bouton invisible à droite */
.invisible-btn-right {
    position: fixed;
    right: 0;
    top: 0;
    width: 25vw;
    height: 100vh;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 10;
}

/* Bouton invisible au centre */
.invisible-btn-center {
    position: fixed;
    top: 50%;                /* placé au milieu verticalement */
    left: 50%;               /* placé au milieu horizontalement */
    transform: translate(-50%, -50%); /* recentre parfaitement */
    width: 40vw;             /* largeur couvrant 40% de l’écran */
    height: 30vh;            /* hauteur couvrant 30% de l’écran */
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 10;
}


/* Bouton invisible à gauche */
.invisible-btn-left {
    position: fixed;
    left: 0;
    top: 0;
    width: 25vw;
    height: 100vh;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 10;
}
</style>

<div class="laboratoire-bg">
    <!-- Droite -->
    <button class="invisible-btn-right" onclick="window.location.href='/terminal'" aria-label="Zone terminal droite"></button>

    <!-- Haut -->
    <button class="invisible-btn-center" onclick="window.location.href='/final'" aria-label="Zone terminal haut"></button>

    <!-- Gauche -->
    <button class="invisible-btn-left" onclick="window.location.href='/ordinateur'" aria-label="Zone terminal gauche"></button>
</div>
{% endblock %}

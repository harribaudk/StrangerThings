<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirige toutes les requÃªtes vers index.php sauf si c'est un fichier ou dossier existant
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

<IfModule !mod_rewrite.c>
    # Apache ne supporte pas mod_rewrite, afficher une erreur
    ErrorDocument 404 /index.php
</IfModule>